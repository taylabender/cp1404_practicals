BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            on_text: app.handle_conversion(input_miles.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_miles.text)

    Label:
        id: output_label
        text: app.output_km
        font_size: 35
        color: (0, 1, 1, 1)